@{
    ViewBag.Title = "_Client";
}

<div class="page_Client">
<div class="fieldContent">
<div class="form-group">
    <label for="Client"></label>
    <input type="hidden" class="form-control" id="client.ClientId" name="client.ClientId" placeholder="Client Id" value="@Model.ClientId" />
</div>

<div class="form-group">
    <label for="Code">Code</label>
    <input type="text" autocomplete="off" class="form-control" id="client.Code" name="client.Code" placeholder="Code" value="@Model.Code" />
</div>

<div class="form-group">
    <label for="Name">Name</label>
    <input type="text" autocomplete="off" class="form-control" id="client.Name" name="client.Name" placeholder="Name" value="@Model.Name">
</div>

<div class="form-group">
    <label for="Address">Address</label>
    <input type="text" autocomplete="off" class="form-control" id="client.Address" name="client.Address" placeholder="Address" value="@Model.Address">
</div>

<div class="form-group">
    <label for="RegistrationNo">Registration No.</label>
    <input type="text" autocomplete="off" class="form-control" id="client.RegistrationNo" name="client.RegistrationNo" placeholder="Registration Number" value="@Model.RegistrationNo">
</div>

<div class="form-group">
    <label for="EmailAddress">Email Address</label>
    <input type="email" autocomplete="off" class="form-control" id="client.EmailAddress" name="client.EmailAddress" placeholder="e.g., johndoe@outlook.com" value="@Model.EmailAddress">
</div>

<div class="form-group" ng-controller="CurrencyController as model" ng-init="model.Initialise()">
  <label for="CurrencyCode">Currency Code</label>
    <ui-select ng-model="model.Currency">
        <ui-select-match placeholder="Select Currency Code">
          <label ng-bind="$select.selected.CurrencyCodes"></label>
        </ui-select-match>
      <ui-select-choices repeat="currency in (model.Currencies | filter: $select.search) track by $index">
         <span ng-bind="currency.CurrencyCodes"></span>
      </ui-select-choices>
    </ui-select>
   <input type="hidden" class="form-control" id="CurrencyCodeId" name="client.CurrencyCodeId" value="{{model.Currency.CurrencyId}}">
   <input type="hidden" class="form-control" id="CurrencyCodes" name="client.CurrencyCodes" value="{{model.Currency.CurrencyCodes}}">
</div>

    <div class="form-group" ng-controller="TaxTypeController as model" ng-init="model.Initialise()">
        <label for="TaxType">Tax Type</label>
        <ui-select ng-model="model.TaxType">
            <ui-select-match placeholder="Select Tax Type">
                <span ng-bind="$select.selected.TaxTypes"></span>
            </ui-select-match>
            <ui-select-choices repeat="taxType in (model.TaxTypes | filter: $select.search) track by $index">
                <span ng-bind="taxType.TaxTypes"></span>
            </ui-select-choices>
        </ui-select>
        <input type="hidden" class="form-control" id="TaxTypeId" name="client.TaxTypeId" value="{{model.TaxType.TaxTypeId}}">
        <input type="hidden" class="form-control" id="TaxTypes" name="client.TaxTypes" value="{{model.TaxType.TaxTypes}}">
    </div>

</div>

<div class="form-group">
     <label for="WithHoldingTax">Withholding Tax</label>
     <input type="number" autocomplete="off" class="form-control" id="client.WithHoldingTax" name="client.WithHoldingTax" min="0" placeholder="WithHolding Tax" value="@Model.WithHoldingTax">
</div>

@*<div class="form-group">
    <label for="EmailId"></label>
    <input type="hidden" class="form-control" id="EmailId" name="client.EmailId" value="@Model.EmailId">
</div>*@

<div class="form-group">
    <input type="submit" class="btn btn-primary" value="Submit" />
</div>
</div>